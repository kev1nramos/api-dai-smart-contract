{
	"ts-node": {
		"files": true
	},
	"files": [
		"src/index.ts",
	],
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "./dist/",
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"es5",
			"es6",
			"es7",
			"es2015",
			"es2017",
			"es2019",
			"es2020",
			"dom"
		],
		"sourceMap": true,
		"allowJs": true,
		"moduleResolution": "node",
		"rootDirs": ["src"],
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": false,
		"noUnusedLocals": false,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"types": [
			"jest",
			"node"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./src"
		],
		"paths": {
			"@/*": ["./src/*", "./node_modules/*"]
		}
	},
	"include": [
		"src/**/*",
		"tests"
	],
	"exclude": [
		"node_modules"
	],
	"tsc-alias": {
	  "verbose": true
	}
}
