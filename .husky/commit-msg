#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

if [[ $HUSKY_GIT_PARAMS =~ "--amend" && $HUSKY_GIT_PARAMS =~ "--no-edit" ]]; then
  exit 0
fi

